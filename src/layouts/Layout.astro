---
import Whatsapp from "../components/Whatsapp.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Whatsapp />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --color-primary: #742dff;
    --color-secondary: #fb5c83;
    --color-terceary: #3e74ae;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #fff;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .bg-animation-1 {
    background-size: 600% 600%;
    animation: gradientText 4s ease-in-out alternate-reverse infinite;
  }

  .bg-animation-2 {
    background-size: 500% 500%;
    animation: gradientText 7s ease-in-out alternate-reverse infinite;
    background-position: 50% 50%;
  }

  .laptop-animation {
    animation: floating 8s ease-in-out alternate-reverse infinite;
  }

  .bg-size-1 {
    background-size: 300%;
  }

  .bg-size-2 {
    background-size: 200% 300%;
  }

  @keyframes floating {
    0% {
      transform: translateY(0px) translateX(0px);
    }
    50% {
      transform: translateY(-15px) translateX(-5px);
    }
    100% {
      transform: translateY(0px) translateX(0px);
    }
  }

  .text-rainbow {
    background: linear-gradient(
      45deg,
      var(--color-primary),
      #fb5c83,
      var(--color-primary),
      #3e74ae,
      var(--color-primary),
      #fb5c83,
      var(--color-primary),
      #3e74ae,
      var(--color-primary),
      #fb5c83,
      var(--color-primary),
      #3e74ae,
      var(--color-primary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    background-size: 400%;
    animation: gradientText 3s linear infinite;
  }

  @keyframes gradientText {
    0% {
      background-position: 0% 0%;
    }
    50% {
      background-position: 50% 50%;
    }
    100% {
      background-position: 100% 100%;
    }
  }
</style>
